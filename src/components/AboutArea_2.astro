---
import Button from "./ui/Button.astro"
import Tag from "./ui/Tag.astro"
import { storyblokEditable } from "@storyblok/astro"
import { renderRichText } from "@storyblok/astro"

const { blok } = Astro.props

const renderedContent = renderRichText(blok.text_1)
---

<section id="about-area" {...storyblokEditable(blok)}>
    <div class="about-row">
        <div class="img-container">{blok.img_1 && 
                <img src={blok.img_1.filename} alt={blok.img_1.alt}/>}
        </div>
        <div class="about-content">
                <!-- <div class="about-tag"><Tag variant="secondary">{blok.category_text}</Tag></div> -->
                <div class="about-heading">{blok.heading_1}</div>
                <div class="about-text" set:html={renderedContent}/>
        </div>
    </div>
</section>

<!-- Optimized styles -->
<style>
    #about-area {
        display: flex;
        flex-direction: column;
        height: auto;
        width: 100%;

        /* Fluid padding: 10% on desktop, 5% on mobile */
        padding-inline: clamp(1.25rem, 8vw, 10%);
        background-color: #F2EEE9;
        color: #38322B;
        padding-top: 60px;
        padding-bottom: 60px;
    }

    .about-row {
        display: grid;
        /* Default for mobile: one column */
        grid-template-columns: 1fr;
        gap: 40px;
        height: fit-content;
        width: 100%;
        align-items: center;
    }

    /* Desktop View */
    @media screen and (min-width: 1024px) {
        .about-row {
            grid-template-columns: 1fr 55%;
        }
    }

    .about-content {
        display: flex;
        flex-direction: column;
        /* Remove the right padding on mobile so text can use full width */
        padding-right: 0;
        order: 1;
    }

    @media screen and (min-width: 1024px) {
        .about-content {
            /* padding-right: 40px; */
            order: 2;
        }
    }

    .about-tag {
        display: flex;
        padding-bottom: 20px;
    }

    .about-heading {
        font-family: "PT Sans Caption", sans-serif;
        font-size: clamp(1.8rem, 4vw, 2.5rem); /* Responsive scaling */
        width: 100%; /* Full width on mobile */
        line-height: 1.2;
        color: #38322B;
        margin-bottom: 20px;
    }

    @media screen and (min-width: 1024px) {
        .about-heading {
            width: 80%; /* Slight restriction for better line length on desktop */
        }
    }

    .about-text {
        font-size: 1.1rem;
        line-height: 1.6;
        display: block; /* Flex can cause weird issues with multiple <p> tags */
    }

    /* Target the injected Storyblok Rich Text paragraphs */
    .about-text :global(p) {
        margin-bottom: 1.2rem;
    }

     .about-text :global(span) {
        color: var(--primary-color) !important;
    }

    .img-container {
        width: 100%;
        /* Force a nice shape on mobile since there is no side-content to pull height */
        /* aspect-ratio: 4 / 3;  */
        aspect-ratio: 2 / 1;
        overflow: hidden;
        position: relative;
        border-radius: 30px;
        box-shadow: 0px 4px 16px 2px #adadad;
        order: 2;
    }

    @media screen and (min-width: 1024px) {
        .img-container {
            aspect-ratio: auto; /* Let it be driven by content height again */
            align-self: stretch; /* Match the height of the text column */
            border-radius: 20px;
            order: 1;
        }
    }

    img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: center;
    }
</style>
