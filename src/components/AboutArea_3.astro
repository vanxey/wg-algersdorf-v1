---
import Button from "./ui/Button.astro"
import Tag from "./ui/Tag.astro"
import { storyblokEditable } from "@storyblok/astro"
import { renderRichText } from "@storyblok/astro"

const { blok } = Astro.props

const renderedContent = renderRichText(blok.text_1)
const renderedContent2 = renderRichText(blok.text_2)
---

<section id="about-area" {...storyblokEditable(blok)}>
    <div class="about-row">
        <div class="about-content">
            <div class="about-heading">{blok.heading_1}</div>
            <div class="about-subheading">{blok.subheading_1}</div>
            <div class="about-text" set:html={renderedContent}/>
            <div class="about-text" set:html={renderedContent2}/>
        </div>
        <div class="img-container">{blok.img_1 && 
                <img src={blok.img_1.filename} alt={blok.img_1.alt}/>}</div>
    </div>
    <!-- <div class="about-row2"><div class="about-text" set:html={renderedContent2}/></div> -->
    
</section>

<style>
    #about-area{
        display: flex;
        flex-direction: column;
        align-items: stretch;

        height: auto;
        width: 100%;

        padding-inline: 10%;
        padding-top: 5%;
        padding-bottom: 10%;
    }

    .about-row{
        display: grid;
        grid-template-columns: 55% 1fr;
        height: fit-content;
        width: 100%;

        align-items: center;
    }

    .about-content{
        display: flex;
        flex-direction: column;
        padding-right: 40px;
    }

    .about-heading{
        font-family: "PT Sans Caption", sans-serif;
        font-size: xx-large;
    }

    .about-subheading{
        font-family: "PT Sans", sans-serif;
        font-size: 1em;
        font-style: italic;
        padding-top: 10px;
    }

    .about-text{
        display: flex;
        font-size: 1.2em;
    }

    p{
        margin: 0px;
        padding: 0px;
    }

    .img-container{
        display: flex;
        align-items: center;
        justify-content: center;

        width: 100%;
        height: 100%;
        /* aspect-ratio: 16/9; */
        overflow: hidden;
        position: relative;

        border-radius: 50px;
        box-shadow: 0px 4px 16px 2px #adadad;
    }

    img{
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: top;
    }
</style>