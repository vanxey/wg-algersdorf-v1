---
const response = await fetch('https://ww2.wg-algersdorf.org/graphql', {
  method: 'POST',
  headers: { 'Content-Type': 'application/json' },
  body: JSON.stringify({
    query: `
      query GetImageByUrl {
            mediaItem(id: "wg-logo-3", idType: SLUG) {
                sourceUrl
                altText
                mediumSource: sourceUrl(size: MEDIUM)
            }
	    }
    `,
  }),
});

const { data } = await response.json();
---

<div id="navbar">
    <div id="logo-container">
        <div id="logo">
            <img src=`${data.mediaItem.sourceUrl}` alt=`${data.mediaItem.altText}` srcset="" height="auto" width="auto">
        </div>
    </div>
    <nav>
        <a href="home">Home</a>
        <a href="/wg">Die WG</a>
        <a href="/angebot">Angebot</a>
        <a href="/kontakt">Kontakt</a>
    </nav>

    <div id="burger-menu">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="#000000"><path fill="#000000" fill-rule="evenodd" d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm0 5.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd"/></svg>
    </div>
</div>

