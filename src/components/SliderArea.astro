---
import Button from "./ui/Button.astro";
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} id="slider-area">
    <div id="slider-tag">
        <div class="tag-wrapper">{blok.category_text}</div>
    </div>
    <div id="slider-heading">
        <div class="heading">{blok.heading}</div>
        <Button variant="tertiary">{blok.button_text}</Button>
    </div>
    <div id="slider-content">
        <div class="slider-column">
            <div class="img-container">{blok.img_1 && 
                <img src={blok.img_1.filename} alt={blok.img_1.alt}/>}
            </div>
            <div class="img-text-wrapper">
                <div class="img-title">{blok.img_1_title}</div>
                <div class="img-description">{blok.img_1_description}</div>
            </div>
        </div>
        <div class="slider-column">
            <div class="img-container">{blok.img_2 && 
                <img src={blok.img_2.filename} alt={blok.img_2.alt}/>}
            </div>
            <div class="img-text-wrapper">
                <div class="img-title">{blok.img_2_title}</div>
                <div class="img-description">{blok.img_2_description}</div>
            </div>
        </div>
        <div class="slider-column">
            <div class="img-container">{blok.img_3 && 
                <img src={blok.img_3.filename} alt={blok.img_3.alt}/>}
            </div>
            <div class="img-text-wrapper">
                <div class="img-title">{blok.img_3_title}</div>
                <div class="img-description">{blok.img_3_description}</div>
            </div>
        </div>
    </div>
    <div id="slider-indicator">oo</div>
</section>

<style>
    #slider-area{
        display: flex;
        flex-direction: column;
        row-gap: 10px;

        height: 100vh;
        width: 100vw;
        background-color: #38322B;
        color: white;

        padding: 50px 10%;
    }

    #slider-tag{
        display: flex;
    }

    .tag-wrapper{
        font-family: "PT Sans", sans-serif;
        font-style: italic;
        font-size: small;

        background-color: white;
        color: #38322B;
        padding-inline: 5px;
    }

    #slider-heading{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .heading{
        font-family: "PT Sans", sans-serif;
        font-size: x-large;
        font-weight: 400;
    }

    #slider-content{
        display: grid;
        gap: 5%;
        height: 100%;
        width: 100%;
        grid-template-columns: 1fr 1fr 1fr;
        padding-top: 30px;
    }

    .slider-column{
        display: grid;
        grid-template-rows: auto 1fr;
        gap: 10px;
        align-content: center;
    }

    .img-container{
        display: flex;
        align-items: center;
        justify-content: center;

        width: 100%;
        /* height: 100%; */
        aspect-ratio: 1/1;
        overflow: hidden;
        position: relative;

        border-radius: 20px;
    }

    img{
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: center;
    }

    .img-text-wrapper{
        display: flex;
        flex-direction: column;
        row-gap: 20px;
        padding-inline: 20px;
    }

    .img-title{
        font-family: "PT Sans Caption", sans-serif;
        font-weight: 500;
        font-size: large;
    }

    #slider-indicator{
        display: flex;
        justify-content: center;
    }
</style>